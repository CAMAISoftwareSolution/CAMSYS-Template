{
  "name": "@camai/common",
  "version": "0.2.9",
  "description": "CamWebSys shared UI components and templates",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "src/styles/index.css"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ui": {
      "types": "./dist/ui.d.ts",
      "import": "./dist/ui.js",
      "require": "./dist/ui.cjs"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js",
      "require": "./dist/auth.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup && npx @tailwindcss/cli -i ./src/styles/index.css -o ./dist/styles.css",
    "dev": "tsup --watch & npx @tailwindcss/cli -i ./src/styles/index.css -o ./dist/styles.css --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tailwindcss": "^4.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}